<!--auto-generated-->
<UserControl
	x:Class="ModManager.Views.Generated.ModManagerSettingsView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:controls="using:ModManager.Controls"
	xmlns:vm="using:ModManager.Models.Settings"
	x:DataType="vm:ModManagerSettings"
	d:DesignHeight="900"
    d:DesignWidth="1600"
	mc:Ignorable="d">
	<controls:AutoGrid RowCount="17" RowHeight="auto">
		<controls:AutoGrid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</controls:AutoGrid.ColumnDefinitions>

		<TextBlock Classes="left" x:Name="GameDataPathTextBlock" Text="Game Data Path" ToolTip.Tip="The path to the Data folder, for loading editor mods
Example: Baldur's Gate 3/Data" />
		<TextBox Classes="compact" Text="{Binding GameDataPath}" ToolTip.Tip="{Binding ElementName=GameDataPathTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="GameExecutablePathTextBlock" Text="Game Executable Path" ToolTip.Tip="The path to bg3.exe" />
		<TextBox Classes="compact" Text="{Binding GameExecutablePath}" ToolTip.Tip="{Binding ElementName=GameExecutablePathTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="GameStoryLogEnabledTextBlock" Text="Enable Story Log" ToolTip.Tip="When launching the game, enable the Osiris story log (osiris.log)" />
		<CheckBox Classes="right" IsChecked ="{Binding GameStoryLogEnabled}" ToolTip.Tip="{Binding ElementName=GameStoryLogEnabledTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="DisableLauncherTelemetryTextBlock" Text="Disable Launcher Telemetry" ToolTip.Tip="Disable the telemetry options in the launcher
Telemetry is always disabled if mods are active" />
		<CheckBox Classes="right" IsChecked ="{Binding DisableLauncherTelemetry}" ToolTip.Tip="{Binding ElementName=DisableLauncherTelemetryTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="DisableLauncherModWarningsTextBlock" Text="Disable Launcher Warnings" ToolTip.Tip="Disable the mod/data mismatch warnings in the launcher" />
		<CheckBox Classes="right" IsChecked ="{Binding DisableLauncherModWarnings}" ToolTip.Tip="{Binding ElementName=DisableLauncherModWarningsTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="LaunchDX11TextBlock" Text="Enable DirectX 11 Mode" ToolTip.Tip="If enabled, when launching the game, bg3_dx11.exe is used instead" />
		<CheckBox Classes="right" IsChecked ="{Binding LaunchDX11}" ToolTip.Tip="{Binding ElementName=LaunchDX11TextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="SkipLauncherTextBlock" Text="Skip Launcher" ToolTip.Tip="Pass the --skip-launcher args when launching the game" />
		<CheckBox Classes="right" IsChecked ="{Binding SkipLauncher}" ToolTip.Tip="{Binding ElementName=SkipLauncherTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="LaunchThroughSteamTextBlock" Text="Launch Through Steam" ToolTip.Tip="Launch the game through steam, instead of by the exe directly" />
		<CheckBox Classes="right" IsChecked ="{Binding LaunchThroughSteam}" ToolTip.Tip="{Binding ElementName=LaunchThroughSteamTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="LimitToSingleInstanceTextBlock" Text="Limit to Single Instance" ToolTip.Tip="Prevent the mod manager from launching multiple instances of the game
This can be bypassed by holding Shift when clicking on the launch button" />
		<CheckBox Classes="right" IsChecked ="{Binding LimitToSingleInstance}" ToolTip.Tip="{Binding ElementName=LimitToSingleInstanceTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="LoadOrderPathTextBlock" Text="Saved Load Orders Path" ToolTip.Tip="The folder containing mod load orders" />
		<TextBox Classes="compact" Text="{Binding LoadOrderPath}" ToolTip.Tip="{Binding ElementName=LoadOrderPathTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="AutoAddDependenciesWhenExportingTextBlock" Text="Auto Add Missing Dependencies When Exporting" ToolTip.Tip="Automatically add dependency mods above their dependents in the exported load order, if omitted from the active order" />
		<CheckBox Classes="right" IsChecked ="{Binding AutoAddDependenciesWhenExporting}" ToolTip.Tip="{Binding ElementName=AutoAddDependenciesWhenExportingTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="CheckForUpdatesTextBlock" Text="Enable Automatic Updates" ToolTip.Tip="Automatically check for updates when the program starts" />
		<CheckBox Classes="right" IsChecked ="{Binding CheckForUpdates}" ToolTip.Tip="{Binding ElementName=CheckForUpdatesTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="DocumentsFolderPathOverrideTextBlock" Text="AppData Path Override" ToolTip.Tip="[EXPERIMENTAL]
Override the default location to %LOCALAPPDATA%\Larian Studios\Baldur's Gate 3
This folder is used when exporting load orders, loading profiles, and loading mods." />
		<TextBox Classes="compact" Text="{Binding DocumentsFolderPathOverride}" ToolTip.Tip="{Binding ElementName=DocumentsFolderPathOverrideTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="ShiftListFocusOnSwapTextBlock" Text="Shift Focus on Swap" ToolTip.Tip="When moving selected mods to the opposite list with Enter, move focus to that list as well" />
		<CheckBox Classes="right" IsChecked ="{Binding ShiftListFocusOnSwap}" ToolTip.Tip="{Binding ElementName=ShiftListFocusOnSwapTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="ActionOnGameLaunchTextBlock" Text="On Game Launch" ToolTip.Tip="When the game launches through the mod manager, this action will be performed" />
		<ComboBox Classes="right" SelectedIndex="{Binding ActionOnGameLaunchIndex, FallbackValue=0}" ToolTip.Tip="{Binding ElementName=ActionOnGameLaunchTextBlock, Path=(ToolTip.Tip)}">
			<ComboBoxItem Content="None" ToolTip.Tip="Do nothing" />
			<ComboBoxItem Content="Minimize" ToolTip.Tip="Minimize the window" />
			<ComboBoxItem Content="Close" ToolTip.Tip="Close the window" />
		</ComboBox>
		
		<TextBlock Classes="left" x:Name="DisableMissingModWarningsTextBlock" Text="Disable Missing Mod Warnings" ToolTip.Tip="If a load order is missing mods, no warnings will be displayed" />
		<CheckBox Classes="right" IsChecked ="{Binding DisableMissingModWarnings}" ToolTip.Tip="{Binding ElementName=DisableMissingModWarningsTextBlock, Path=(ToolTip.Tip)}"/>
		
		<TextBlock Classes="left" x:Name="SaveWindowLocationTextBlock" Text="Save Window Location" ToolTip.Tip="Save and restore the window location when the application starts." />
		<CheckBox Classes="right" IsChecked ="{Binding SaveWindowLocation}" ToolTip.Tip="{Binding ElementName=SaveWindowLocationTextBlock, Path=(ToolTip.Tip)}"/>
	</controls:AutoGrid>
</UserControl>