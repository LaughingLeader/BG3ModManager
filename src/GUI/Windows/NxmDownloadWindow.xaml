<local:NxmDownloadWindowBase
    x:Class="ModManager.Windows.NxmDownloadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:controls="clr-namespace:ModManager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModManager.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NXM Downloader"
    Width="600"
    Height="200"
    Background="{DynamicResource {x:Static adonisUI:Brushes.Layer0BackgroundBrush}}"
    Foreground="{DynamicResource {x:Static adonisUI:Brushes.AccentForegroundBrush}}"
    TitleBarBackground="#f57842"
    TitleBarForeground="{DynamicResource {x:Static adonisUI:Brushes.AccentForegroundBrush}}"
    mc:Ignorable="d">
    <Grid Margin="8,16,8,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Enter a nxm:\\ url below:" TextAlignment="Center" />
        <controls:UnfocusableTextBox
            x:Name="UrlTextBox"
            Grid.Row="1"
            Margin="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            AcceptsReturn="False"
            AcceptsTab="False"
            TextWrapping="Wrap" />
        <Button
            x:Name="DownloadButton"
            Grid.Row="2"
            Padding="16,4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Download" />
    </Grid>
</local:NxmDownloadWindowBase>
