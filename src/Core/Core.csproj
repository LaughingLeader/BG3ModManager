<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<RootNamespace>ModManager</RootNamespace>
		<AssemblyName>ModManager.Core</AssemblyName>

		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>

		<DefineConstants Condition="'$(UseWPF)' == 'true' ">WPF</DefineConstants>

		<Platforms>AnyCPU;x64</Platforms>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'AoT'">
		<IsAotCompatible>true</IsAotCompatible>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\External\NexusModsNET\NexusModsNET\NexusModsNET.csproj" />
		<ProjectReference Include="..\..\External\modio.net\Modio\Modio.csproj" />
		<ProjectReference Include="..\..\External\lslib\LSLibNative\LSLibNative.vcxproj" />
		<ProjectReference Include="..\..\External\lslib\LSLib\LSLib.csproj" />
		<ProjectReference Include="..\..\External\lslib\LSLibStats\LSLibStats.csproj" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="Gameloop.Vdf" />
		<PackageReference Include="Octokit" />
		<PackageReference Include="ReactiveUI" />
		<PackageReference Include="ReactiveUI.Fody" />
		<PackageReference Include="ConfigureAwait.Fody" PrivateAssets="all" />
		<PackageReference Include="DynamicData" />
		<PackageReference Include="SharpCompress" />
		<PackageReference Include="System.Net.Http" />
		<PackageReference Include="System.Text.RegularExpressions" />
		<PackageReference Include="System.IO.Abstractions" />
	</ItemGroup>
</Project>